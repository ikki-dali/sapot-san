# Slack Bot Token（xoxb-で始まる）
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Slack App Token（xapp-で始まる、Socket Mode用）
SLACK_APP_TOKEN=xapp-your-app-token-here

# Slack Signing Secret
SLACK_SIGNING_SECRET=your-signing-secret-here

# Supabase
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# OpenAI API
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# AI機能のON/OFF設定
AI_ENABLED=true
AI_SUMMARIZE_ENABLED=true
AI_PRIORITY_ENABLED=true
AI_FORMAT_ENABLED=true
AI_AUTO_TASK_ENABLED=true

# ログ設定
LOG_LEVEL=info
NODE_ENV=development

# APIサーバー設定
API_PORT=3000

# Notion連携（オプション）
# NOTION_API_KEY=ntn_your-notion-api-key
# NOTION_DATABASE_ID=your-notion-database-id

# Google Calendar OAuth連携（オプション）
# ユーザーごとのGoogleカレンダー連携を有効にする
# Google Cloud Consoleで OAuth 2.0 クライアント ID を作成してください
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-client-secret
# GOOGLE_REDIRECT_URI=http://localhost:3000/api/google-calendar/callback
# 本番環境ではGOOGLE_REDIRECT_URIをVercel URLに変更してください
# 例: GOOGLE_REDIRECT_URI=https://your-app.vercel.app/api/google-calendar/callback
